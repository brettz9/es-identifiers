{
  "compilerOptions": {
    "lib": ["es2022"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["dist/**/*.js", "dist/**/*.cjs"],
  "exclude": ["node_modules"]
}
